---
import type { Experience } from "../utils/types";

export interface Props {
  title: string;
  experiences: Experience[];
}

const { title, experiences } = Astro.props;
---

<div class="flex flex-col">
  <h3 class="text-2xl mt-8 mb-5">{title}</h3>
  <ol
    id="dev-experience"
    class="flex flex-col items-start pl-6 relative h-auto gap-6"
  >
    <div class="absolute h-full w-[2px] bg-zinc-900 dark:bg-white left-0 top-4">
    </div>
    {
      experiences.map((exp) => (
        <li class="flex flex-col items-start relative gap-1 w-full">
          <div class="absolute w-3 h-3 rounded-full bg-zinc-900 dark:bg-white -left-[29px] top-2" />
          <p class="font-medium">{exp.timeSpan}</p>
          <span class="font-medium">{exp.company}</span>
          <h4 class="font-semibold text-xl mb-2">{exp.title}</h4>
          <p class="font-medium text-zinc-500 dark:text-zinc-300 md:text-justify">
            {exp.description}
          </p>
        </li>
      ))
    }
  </ol>
</div>

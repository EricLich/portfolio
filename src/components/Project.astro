---
import type { Project } from "../utils/types";

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article
  class="w-full flex flex-col border border-zinc-200 dark:border-gray-600 rounded-xl overflow-hidden shadow-xl"
>
  <div
    class="flex items-center justify-start gap-2 w-full p-3 bg-zinc-600 dark:bg-gray-600 border-b border-b-zinc-900 dark:border-b-gray-600"
  >
    <div class="w-3 h-3 rounded-full bg-red-500"></div>
    <div class="w-3 h-3 rounded-full bg-yellow-300"></div>
    <div class="w-3 h-3 rounded-full bg-green-600"></div>
  </div>

  <div
    class="w-full h-10 border-b-zinc-900 dark:border-b-gray-600 flex items-center px-2 py-2 gap-2"
  >
    <div
      class="flex-1 p-2 flex items-center h-full rounded-xl bg-white dark:bg-gray-700 border border-zinc-900"
    >
      <p class="text-[11px] md:font-medium text-zinc-900 dark:text-white">
        {project.url}
      </p>
    </div>
  </div>

  <div class="w-full">
    <a href={project.url} target="_blank"
      ><img src={project.imgUrl} alt={`${project.name} image`} /></a
    >
  </div>

  <div class="h-auto px-3 py-4 flex flex-col items-start gap-2 md:gap-3">
    <a href={project.url} target="_blank" class="font-semibold text-lg md:text-xl">{project.name}</a
    >
    <p class="font-light md:font-base">{project.description}</p>
    <h5 class="mb-1 font-medium">Technologies:</h5>
    <ul class="flex flex-wrap gap-2 lg:gap-3 items-center">
      {
        project.technologies.map((tech) => (
          <li class="text-sm font-medium px-2 py-1 border border-zinc-300  rounded-full bg-zinc-300 text-zinc-900 dark:text-zinc-600  ">
            {tech}
          </li>
        ))
      }
    </ul>
    {
      project.companyName && project.companyUrl && (
        <div class="flex items-center gap-2 mt-4">
          <p>Company link:</p>
          <a href={project.companyUrl} target="_blank" class="font-semibold">
            {project.companyName} ↗︎
          </a>
        </div>
      )
    }
  </div>
</article>
